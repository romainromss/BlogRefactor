{% extends "layout.html.twig" %}

{% block title %}
    <title>Connexion</title>
{% endblock %}


{% block content %}
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <form action="/login" method="post" class="col-lg-6 offset-lg-3">
                <!-- Le pseudo -->
                <div class="form-group">
                    <label for="name">Votre adresse mail :</label>
                    <input type="text" class="form-control input-sm" name="email"
                           placeholder="Votre adresse mail" value="{{ users.email}}">
                </div>

                <!-- Le mot de passe -->
                <div class="form-group">
                    <label for="pass">Votre mot de passe :</label>
                    <input type="password" class="form-control input-sm" name="pass"
                           placeholder="votre mot de passe">
                </div>

                <div class="form-group">
                    <div class="checkbox">
                            <input type="checkbox" name="remember" id="remember"/>
                            <label for="remember">Se souvenir de moi</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    Se connecter
                </button>
            </form>
        </div>
    </div>
{% endblock %}

